        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" x:Name="myWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <Rectangle HorizontalAlignment="left" Height="10" Margin="790,440,0,0" Stroke="Black" VerticalAlignment="Top" Width="10"/>
